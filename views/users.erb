<section>
  <h2>Users</h2>
  <table class="users">
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Admin</th>
      <th>Edit</th>
      <th></th>
    </tr>
    <% users.each do |user| %>
      <form action="/user/<%= user[:id] %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <tr>
          <td><%= user[:id] %></td>
          <td><%= user[:user_email] %></td>
          <td><%= user[:administrator] %></td>
          <td><a href="/user/<%= user[:id] %>">Edit</a></td>
          <td><input type="submit" value="Delete"></td>
        </tr>
      </form>
    <% end %>
  </table>
</section>